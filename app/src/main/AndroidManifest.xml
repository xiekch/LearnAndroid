<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".storage.FilesActivity"></activity>
        <activity
            android:name=".library.LibraryIndexActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".layout.ToolBarActivity"
            android:parentActivityName=".layout.LayoutIndexActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".layout.ActionBarActivity"
            android:logo="@drawable/ic_launcher_foreground"
            android:parentActivityName=".layout.LayoutIndexActivity" />
        <activity android:name=".component.ComponentsIndexActivity" />
        <activity
            android:name=".storage.SharedPreferencesActivity"
            android:parentActivityName=".storage.StorageIndexActivity" />
        <activity android:name=".storage.StorageIndexActivity" />
        <activity
            android:name=".thread.ThreadIndexActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".fragment.ContainerActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".intent.NextActivity"
            android:label="next">
            <intent-filter>
                <action android:name="android.intent.action.Jump" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".intent.IntentActivity"
            android:label="intent"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".activity.LifeCycleActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".layout.ProgressBarActivity"
            android:parentActivityName=".layout.LayoutIndexActivity" />
        <activity
            android:name=".layout.AlertDialogActivity"
            android:parentActivityName=".layout.LayoutIndexActivity" />
        <activity
            android:name=".layout.WebViewActivity"
            android:parentActivityName=".layout.LayoutIndexActivity" />
        <activity
            android:name=".recyclerView.RecyclerIndexActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".recyclerView.StaggeredGridRecyclerViewActivity"
            android:parentActivityName=".recyclerView.RecyclerIndexActivity" />
        <activity
            android:name=".layout.LayoutIndexActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".animation.AnimationActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".recyclerView.LinearLayoutRecyclerViewActivity"
            android:label="@string/title_activity_details"
            android:parentActivityName=".recyclerView.RecyclerIndexActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myapplication.MainActivity" />
        </activity>
        <activity
            android:name=".layout.SysuActivity"
            android:parentActivityName=".layout.LayoutIndexActivity" />
        <activity
            android:name=".layout.DisplayMessageActivity"
            android:parentActivityName=".MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>