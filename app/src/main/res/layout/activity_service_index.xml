<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".component.ServiceIndexActivity">

    <Button
        android:id="@+id/button_start_service"
        style="@style/ConstraintLayoutIndexButton"
        android:text="Start Service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_stop_service"
        style="@style/ConstraintLayoutIndexButton"
        android:text="Stop Service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_start_service" />

    <Button
        android:id="@+id/button_bind_service"
        style="@style/ConstraintLayoutIndexButton"
        android:text="Bind Service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_stop_service" />

    <Button
        android:id="@+id/button_unbind_service"
        style="@style/ConstraintLayoutIndexButton"
        android:text="Unbind Service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_bind_service" />

    <Button
        android:id="@+id/button_intent_service"
        style="@style/ConstraintLayoutIndexButton"
        android:text="Intent Service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_unbind_service" />
</androidx.constraintlayout.widget.ConstraintLayout>