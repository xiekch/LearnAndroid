<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".etc.EtcIndexActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonOpenCamera"
            style="@style/ConstraintLayoutIndexButton"
            android:text="Open Camera" />

        <Button
            android:id="@+id/buttonMusicPlayer"
            style="@style/ConstraintLayoutIndexButton"
            android:text="Music Player" />

        <Button
            android:id="@+id/buttonRTLLanguage"
            style="@style/ConstraintLayoutIndexButton"
            android:text="RTL Language" />

        <TextView
            android:id="@+id/textMove"
            style="@style/ConstraintLayoutIndexButton"
            android:layout_width="100dp"
            android:height="30dp"
            android:background="@color/lightGreen"
            android:text="move"
            android:translationZ="5dp" />

        <Button
            android:id="@+id/buttonTest"
            style="@style/ConstraintLayoutIndexButton"
            android:text="Test" />
    </LinearLayout>
</ScrollView>