<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.LayoutIndexActivity">

    <Button
        android:id="@+id/button1"
        style="@style/ConstraintLayoutIndexButton"
        android:text="@string/sysu_system"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Button>

    <Button
        android:id="@+id/button2"
        style="@style/ConstraintLayoutIndexButton"
        android:text="@string/webview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1"></Button>

    <Button
        android:id="@+id/button3"
        style="@style/ConstraintLayoutIndexButton"
        android:text="Load HTML"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button2"></Button>

    <Button
        android:id="@+id/button4"
        style="@style/ConstraintLayoutIndexButton"
        android:text="Toast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button3"></Button>

    <Button
        android:id="@+id/button5"
        style="@style/ConstraintLayoutIndexButton"
        android:text="AlertDialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button4"></Button>


    <Button
        android:id="@+id/button6"
        style="@style/ConstraintLayoutIndexButton"
        android:text="Progress Bar"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button5"></Button>


    <com.example.myapplication.layout.MyButton
        android:id="@+id/button7"
        style="@style/ConstraintLayoutIndexButton"
        android:text="My Button"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button6"></com.example.myapplication.layout.MyButton>


    <Button
        android:id="@+id/button8"
        style="@style/ConstraintLayoutIndexButton"
        android:text="ActionBar"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button7"></Button>

    <Button
        android:id="@+id/button9"
        style="@style/ConstraintLayoutIndexButton"
        android:text="ToolBar"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button8"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>