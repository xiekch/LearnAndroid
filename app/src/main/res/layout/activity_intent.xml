<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intent.IntentActivity">

    <Button
        android:id="@+id/jump_button1"
        style="@style/ConstraintLayoutIndexButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jump to Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/jump_button2"
        style="@style/ConstraintLayoutIndexButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jump to Current"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jump_button1" />

    <Button
        android:id="@+id/jump_button3"
        style="@style/ConstraintLayoutIndexButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Open browser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jump_button2" />

    <Button
        android:id="@+id/jump_button4"
        style="@style/ConstraintLayoutIndexButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jump_button3" />

    <Button
        android:id="@+id/share_button"
        style="@style/ConstraintLayoutIndexButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jump_button4" />
</androidx.constraintlayout.widget.ConstraintLayout>