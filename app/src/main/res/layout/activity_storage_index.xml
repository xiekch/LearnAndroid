<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".storage.StorageIndexActivity">

    <Button
        android:id="@+id/button_shared_preferences"
        style="@style/ConstraintLayoutIndexButton"
        android:text="SharedPreferences"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        style="@style/ConstraintLayoutIndexButton"
        android:text="Files"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_shared_preferences" />
</androidx.constraintlayout.widget.ConstraintLayout>