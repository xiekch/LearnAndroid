<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view1_1"
        style="@style/BlockText"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:background="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view1_2"
        style="@style/BlockText"
        android:layout_below="@id/view1_1"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/deepGreen"
        app:layout_constraintStart_toEndOf="@+id/view1_1"
        app:layout_constraintTop_toTopOf="@+id/view1_1" />


    <TextView
        android:id="@+id/view1_3"
        style="@style/BlockText"
        android:layout_below="@id/view1_1"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:background="#A128FF"
        app:layout_constraintStart_toEndOf="@+id/view1_2"
        app:layout_constraintTop_toTopOf="@+id/view1_1" />


    <TextView
        android:id="@+id/view2_1"
        style="@style/BlockText"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="#FF7810"
        app:layout_constraintStart_toStartOf="@id/view1_1"
        app:layout_constraintTop_toBottomOf="@id/view1_1" />

    <TextView
        android:id="@+id/view2_2"
        style="@style/BlockText"
        android:layout_below="@id/view1_1"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:background="#077707"
        app:layout_constraintStart_toStartOf="@+id/view1_2"
        app:layout_constraintTop_toBottomOf="@id/view1_2" />


    <TextView
        android:id="@+id/view2_3"
        style="@style/BlockText"
        android:layout_below="@id/view1_1"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:background="#A128FF"
        app:layout_constraintStart_toStartOf="@+id/view1_3"
        app:layout_constraintTop_toBottomOf="@id/view1_3" />

    <TextView
        android:id="@+id/view3_1"
        style="@style/BlockText"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:background="#FF7810"
        app:layout_constraintStart_toStartOf="@+id/view2_1"
        app:layout_constraintTop_toBottomOf="@id/view2_1" />

    <TextView
        android:id="@+id/view3_2"
        style="@style/BlockText"
        android:layout_below="@id/view1_1"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:background="#077707"
        app:layout_constraintStart_toStartOf="@+id/view2_2"
        app:layout_constraintTop_toBottomOf="@id/view2_2" />


    <TextView
        android:id="@+id/view3_3"
        style="@style/BlockText"
        android:layout_below="@id/view1_1"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:background="#A128FF"
        app:layout_constraintStart_toStartOf="@+id/view2_3"
        app:layout_constraintTop_toBottomOf="@id/view2_3" />

</androidx.constraintlayout.widget.ConstraintLayout>