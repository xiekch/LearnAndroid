<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".library.LibraryIndexActivity">

    <Button
        android:id="@+id/button_okHttp"
        style="@style/ConstraintLayoutIndexButton"
        android:text="OkHttp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_retrofit"
        style="@style/ConstraintLayoutIndexButton"
        android:text="Retrofit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_okHttp" />

    <Button
        android:id="@+id/button_rxJava"
        style="@style/ConstraintLayoutIndexButton"
        android:text="RxJava"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_retrofit" />

    <Button
        android:id="@+id/button_glide"
        style="@style/ConstraintLayoutIndexButton"
        android:text="Glide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_rxJava" />

    <Button
        android:id="@+id/button_mvvm"
        style="@style/ConstraintLayoutIndexButton"
        android:text="MVVM"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_glide" />

    <Button
        android:id="@+id/button_mvvm_data_binding"
        style="@style/ConstraintLayoutIndexButton"
        android:text="MVVM Data Binding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_mvvm" />

</androidx.constraintlayout.widget.ConstraintLayout>